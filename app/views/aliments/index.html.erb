      <%= link_to "Télécharger" %>
    </button>
</div>

<div class="fil-ariane-bar">
  <p id="accueil">Accueil</p>
    <i class="fas fa-chevron-right"></i>
  <p>Données</p>
    <i class="fas fa-chevron-right"></i>
  <p>Alimentation</p>
