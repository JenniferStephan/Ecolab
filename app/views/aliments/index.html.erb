          <p><%= alim.alim_ssgrp_nom_fr.capitalize %></p>
        </div>

        <div class="product-card-infos">

          <p class="impact m-2">IMPACT ECOLOGIQUE</p>


          <div class="metrics-score-infos">
            <div class="3-metrics">
              <p class="metric">hello</p>
              <p class="metric">hello</p>
              <p class="metric">hello</p>
            </div>
            <div class="ecoscore">
              <h3>45</h3>
            </div>
          </div>

          <button class="button-details-product-fiche">
            <%= link_to "Voir détails" %>
          </button>


        </div>
      </div>

    <% end %>
  </div>




