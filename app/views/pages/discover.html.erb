<section class="section-produit" id="alim">
  <div class="d-flex flex-row">
    <%= image_tag("manger.png", {:style => "width:15vh; margin: 10px; height: 15vh; border-radius: 50%; "}) %>

    <div class="product-info-alim d-flex flex-column ml-3 mb-3 mt-3">
